<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--AppBarCollapse-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="#99000000"
            app:titleEnabled="false"
            app:expandedTitleGravity="top|center"
            app:collapsedTitleGravity="start"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:background="@drawable/backgroundunp1">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <ImageView
                    android:id="@+id/logounp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/logounp" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghostwhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/linearlayout1"
            tools:ignore="ExtraText">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clipToPadding="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_selamatDatang1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:gravity="center"
                    android:textSize="34sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/TV_selamatDatang2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="di Aplikasi E-ORA"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"/>

                <View
                    android:id="@+id/separatorMain1"
                    style="@style/Batas"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                //OurVision
                <TextView
                    android:id="@+id/tv_visionTitle"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_title1"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:id="@+id/iv_visionSeparator"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circledot"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_visionText"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vision_text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"/>

                <View
                    android:id="@+id/separatorMain2"
                    style="@style/Batas"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                    android:id="@+id/iv_vision2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-140dp"
                    android:layout_marginBottom="-100dp"
                    android:src="@drawable/vision2" />

                <View
                    android:id="@+id/separatorMain3"
                    style="@style/Batas"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="16dp"/>

                //ImageSlider
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clipToPadding="true"
                    android:layout_marginTop="5dp">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        app:auto_cycle="true"
                        app:error_image="@drawable/errorfor_imageslider"
                        app:placeholder="@color/cardview_shadow_start_color"
                        app:delay="0"
                        app:period="2000"
                        app:corner_radius="20"
                        tools:ignore="PrivateResource"/>
                </LinearLayout>

                <View
                    android:id="@+id/separatorMain4"
                    style="@style/Batas"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_panduanMahasiswaTitle"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALUR MAHASISWA"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/iv_panduanSeparator"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circledot"
                    android:layout_marginBottom="10dp"/>
                <com.shuhart.stepview.StepView
                    android:id="@+id/step_viewMahasiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="26dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:sv_selectedCircleColor="@color/gold"
                    app:sv_selectedTextColor="@color/color3"
                    app:sv_stepLineWidth="1dp"
                    app:sv_stepPadding="6dp"
                    app:sv_nextTextColor="@color/color3"
                    app:sv_nextStepLineColor="@color/black"
                    app:sv_doneCircleColor="@color/bluelight"
                    app:sv_doneStepLineColor="@color/colorAccent"
                    app:sv_doneCircleRadius="12dp"
                    app:sv_selectedCircleRadius="12dp"
                    app:sv_selectedStepNumberColor="@color/black"
                    app:sv_stepViewStyle="@style/StepView"
                    app:sv_doneStepMarkColor="@color/color5"
                    app:sv_stepNumberTextSize="16sp"
                    app:sv_animationType="Circle"
                    app:sv_stepsNumber="6"
                    app:sv_textSize="12sp" />

                <View
                    android:id="@+id/separatorMain5"
                    style="@style/Batas"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tv_panduanDonaturTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALUR DONATUR"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/iv_panduanDonaturSeparator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circledot"
                    android:layout_marginBottom="10dp"/>
                <com.shuhart.stepview.StepView
                    android:id="@+id/step_viewDonatur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="26dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:sv_selectedCircleColor="@color/gold"
                    app:sv_selectedTextColor="@color/color3"
                    app:sv_stepLineWidth="1dp"
                    app:sv_stepPadding="6dp"
                    app:sv_nextTextColor="@color/color3"
                    app:sv_nextStepLineColor="@color/black"
                    app:sv_doneCircleColor="@color/bluelight"
                    app:sv_doneStepLineColor="@color/colorAccent"
                    app:sv_doneCircleRadius="12dp"
                    app:sv_selectedCircleRadius="12dp"
                    app:sv_selectedStepNumberColor="@color/black"
                    app:sv_stepViewStyle="@style/StepView"
                    app:sv_doneStepMarkColor="@color/color5"
                    app:sv_stepNumberTextSize="16sp"
                    app:sv_animationType="Circle"
                    app:sv_stepsNumber="6"
                    app:sv_textSize="12sp"/>

                <View
                    android:id="@+id/separatorMain7"
                    style="@style/Batas"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="50dp"/>

                <TextView
                    android:id="@+id/tv_footerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="designed by Prasyah, 2020"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menuMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/gold"
        fab:menu_colorPressed="@color/gold"
        fab:menu_colorRipple="@color/ghostwhite"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/openmenu"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="@color/black"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#FFFFFF"
        fab:menu_labels_colorPressed="#FFFFFF"
        fab:menu_labels_colorRipple="#66000000"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="#BF000000"
        fab:menu_fab_show_animation="@anim/show_from_bottom"
        fab:menu_fab_hide_animation="@anim/hide_to_bottom">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bt_floatabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_infoblack32"
            fab:fab_size="normal"
            fab:fab_label="Tentang Pengembang"
            app:fab_colorNormal="@color/gold"
            app:fab_colorPressed="@color/gold"
            app:fab_colorRipple="#66000000"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_gotoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login"
            fab:fab_size="normal"
            fab:fab_label="Login E-ORA"
            app:fab_colorNormal="@color/gold"
            app:fab_colorPressed="@color/gold"
            app:fab_colorRipple="#66000000"/>
    </com.github.clans.fab.FloatingActionMenu>


</androidx.coordinatorlayout.widget.CoordinatorLayout>