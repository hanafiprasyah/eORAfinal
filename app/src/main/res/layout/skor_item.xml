<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_id_skor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="#111"
                android:textSize="12sp"
                android:gravity="center"
                android:text="ID SKOR"/>

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_id_skor"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="NAMA MAHASISWA"/>

            <TextView
                android:id="@+id/tv_kriteriaGaji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nama"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="KRITERIA GAJI"/>

            <TextView
                android:id="@+id/tv_kriteriaUKT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kriteriaGaji"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="KRITERIA UKT"/>

            <TextView
                android:id="@+id/tv_kriteriaJumlahAnak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kriteriaUKT"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:text="KRITERIA JUMLAH ANAK"/>

            <Button
                android:id="@+id/btn_hitungSkor"
                android:layout_below="@+id/tv_kriteriaJumlahAnak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HITUNG SKOR"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/et_bgmhs"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>