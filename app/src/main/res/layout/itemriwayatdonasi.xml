<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layoutRiwayatDonasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nama_donaturRiwayatDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:textColor="#111"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Memuat.." />
            <TextView
                android:id="@+id/jumlahDonasi_RiwayatDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_donaturRiwayatDonasi"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color3"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/jumlahDonasi_RiwayatDonasi">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Jenis Donasi :"/>
                <TextView
                    android:id="@+id/jenis_donasiRiwayatDonasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:text="Memuat.."/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>