<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layoutRiwayatDonasiKhusus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nama_donaturRiwayatDonasiKhusus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:textColor="#111"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Memuat.." />
            <TextView
                android:id="@+id/pembatas1"
                android:layout_below="@+id/nama_donaturRiwayatDonasiKhusus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kepada :"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/NIMmhs_RiwayatDonasiKhusus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pembatas1"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/color3"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <TextView
                android:id="@+id/namaMhs_RiwayatDonasiKhusus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/NIMmhs_RiwayatDonasiKhusus"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color3"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@id/namaMhs_RiwayatDonasiKhusus">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#111"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="No. HP Mahasiswa :"/>
                <TextView
                    android:id="@+id/notelMhs_donasiRiwayatDonasiKhusus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:lines="2"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:text="Memuat.."
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>