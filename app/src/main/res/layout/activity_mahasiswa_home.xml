<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MahasiswaHome"
    android:background="@color/ghostwhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_mhs">
                <TextView
                    android:id="@+id/toolbar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </androidx.appcompat.widget.Toolbar>

        <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">
                <RelativeLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_foto_profilMhs"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/bg_image_oval"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/tvNamaMhs"
                            android:layout_below="@+id/iv_foto_profilMhs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="@string/home_nama_mhs"
                            android:textAllCaps="true"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvNamaBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvNamaMhs"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="15sp" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvNorekMhs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvNamaBank"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="35dp"
                            android:layout_marginEnd="35dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="15sp"/>

                        <LinearLayout
                            android:id="@+id/rank_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvNorekMhs"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                                <TextView
                                    android:id="@+id/tvStatusShow"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@string/status_proposal_mhs"
                                    android:visibility="visible"/>

                                <TextView
                                    android:id="@+id/tv_statusProposalMhs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textAllCaps="true"
                                    android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/editProposal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rank_layout"
                            android:layout_marginTop="30dp">
                                <Button
                                    android:id="@+id/bt_PerbaikanProposal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="@drawable/bg_btnripple"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:text="EDIT PROPOSAL"
                                    android:textColor="@color/color3"
                                    android:visibility="gone"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_penghubungEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:text="Perhatian!"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:fontFamily="sans-serif-thin"
                            android:layout_below="@+id/editProposal_layout"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:id="@+id/infoBerkas_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_penghubungEdit"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:visibility="gone">
                                <TextView
                                    android:id="@+id/tv_upload"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Silakan lengkapi berkas anda dalam bentuk PDF sebagai bukti pendaftaran proposal anda"
                                    android:maxLines="4"
                                    android:textColor="@color/red"
                                    android:textSize="14sp"/>
                                <ImageButton
                                    android:id="@+id/IB_upload"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:padding="20dp"
                                    android:src="@drawable/ic_cloud_upload_black_24dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:elevation="0dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:contentDescription="Upload File"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/info_statusMenunggu"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/rank_layout"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="10"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/color3"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Pengajuan proposal anda akan diverifikasi oleh admin dalam (x) hari."/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/color3"
                                    android:text="Berkas anda akan diseleksi sesuai dengan data proposal yang anda kirim. Jika berkas dan data proposal tidak sesuai, maka anda harus melakukan perubahan proposal."/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/info_laporanDonasi"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/rank_layout"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:visibility="gone">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color3"
                                    android:maxLines="6"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Silakan cek laporan donasi secara berkala melalui tombol menu di sudut kanan bawah. Izin pemberian donasi oleh para donatur akan diberikan jika proposal anda telah disetujui oleh admin."/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ajukanUlang_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/rank_layout"
                            android:layout_marginTop="20dp"
                            android:visibility="gone">
                                <Button
                                    android:id="@+id/bt_AjukanUlangProposal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="@drawable/bg_btnripple"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:text="AJUKAN ULANG PROPOSAL"
                                    android:textColor="@color/color3"/>
                        </LinearLayout>
                </RelativeLayout>
        </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:visibility="invisible"
            android:layout_above="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            fab:menu_fab_size="normal"
            fab:menu_showShadow="true"
            fab:menu_shadowColor="#66000000"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="3dp"
            fab:menu_colorNormal="@color/color3"
            fab:menu_colorPressed="@color/color3"
            fab:menu_colorRipple="@color/ghostwhite"
            fab:menu_animationDelayPerItem="50"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_buttonSpacing="0dp"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_textColor="@color/black"
            fab:menu_labels_textSize="14sp"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_colorNormal="#FFFFFF"
            fab:menu_labels_colorPressed="#FFFFFF"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_position="left"
            fab:menu_openDirection="up"
            fab:menu_backgroundColor="#BF000000"
            fab:menu_fab_show_animation="@anim/show_from_bottom"
            fab:menu_fab_hide_animation="@anim/hide_to_bottom">
                <!--fab:menu_fab_label="Close"-->

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/laporanDonasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_book_black24"
                    fab:fab_size="normal"
                    fab:fab_label="Laporan Donasi"
                    app:fab_colorNormal="@color/color3"
                    app:fab_colorPressed="@color/color3"
                    app:fab_colorRipple="@color/ghostwhite" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/ajukanProposalMhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail"
                    fab:fab_size="normal"
                    fab:fab_label="Ajukan Proposal"
                    app:fab_colorNormal="@color/color3"
                    app:fab_colorPressed="@color/color3"
                    app:fab_colorRipple="@color/ghostwhite"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/editProfilMhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    fab:fab_size="normal"
                    fab:fab_label="Edit Profil"
                    app:fab_colorNormal="@color/color3"
                    app:fab_colorPressed="@color/color3"
                    app:fab_colorRipple="@color/ghostwhite"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/lihatDonaturMhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_donatur_look"
                    fab:fab_size="normal"
                    fab:fab_label="Lihat Donatur"
                    app:fab_colorNormal="@color/color3"
                    app:fab_colorPressed="@color/color3"
                    app:fab_colorRipple="@color/ghostwhite"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/logoutMhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_signout"
                    fab:fab_size="normal"
                    fab:fab_label="Keluar"
                    app:fab_colorNormal="@color/color3"
                    app:fab_colorPressed="@color/color3"
                    app:fab_colorRipple="@color/ghostwhite"/>
        </com.github.clans.fab.FloatingActionMenu>

        <TextView
            android:id="@+id/tv_NIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:text="NIM"/>
        <TextView
            android:id="@+id/tv_idProposal"
            android:layout_below="@+id/tv_NIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="ID PROPOSAL"/>

</RelativeLayout>