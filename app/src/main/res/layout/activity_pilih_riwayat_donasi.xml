<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihRiwayatDonasi"
    android:background="@color/ghostwhite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPilihRiwayatDonasi"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_toolbar_editprofil_donatur"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways">
        <TextView
            android:id="@+id/btnBacktoDonaturHome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_btnripple"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_back_ios"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:clickable="true"
            android:focusable="true"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_IDpilihRiwayatDonasi"
        android:layout_below="@+id/toolbarPilihRiwayatDonasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:visibility="gone"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_foto_profilPilihRiwayatDonasi"
        android:layout_below="@+id/tv_IDpilihRiwayatDonasi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_image_oval"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/ghostwhite"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_gotoRiwayatDonasiUmum"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bgdonatur"
            android:text="Riwayat Donasi Umum"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btn_gotoRiwayatDonasiKhusus"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bgdonatur"
            android:text="Riwayat Donasi Khusus"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>