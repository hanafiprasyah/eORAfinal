<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostwhite"
    tools:context=".EditProfilMhs">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarEditProfilMhs"
        android:layout_width="match_parent"
        android:background="@drawable/bg_toolbar_editprofil"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/btnBacktoMhs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_btnripple"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_back_ios"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/saveEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_btnripple"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_done"

                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/ghostwhite"
        android:layout_below="@+id/nestedView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Informasi :" />
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:dividerHeight="0.5dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedView"
        android:layout_below="@+id/toolbarEditProfilMhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ghostwhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="6">
                <TextView
                    android:id="@+id/et_nim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="NIM Mahasiswa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="6">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="arrowright.json"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_nama"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:inputType="textCapWords"
                    android:layout_height="wrap_content"
                    android:hint="Nama Mahasiswa"
                    app:met_floatingLabel="highlight"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="6">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="arrowright.json"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_email"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    app:met_floatingLabel="highlight"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="6">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="arrowright.json"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_notel"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:autoLink="none"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    app:met_floatingLabel="highlight"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>