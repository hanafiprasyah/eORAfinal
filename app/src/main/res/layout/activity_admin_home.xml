<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminHome">

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="LOGOUT"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:spinning_bar_color="@color/colorAccent"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp"/>

    <!--<Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
        -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/adminpanel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adminPhotos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/verifiedicon"
                android:background="@drawable/adminfoto_bg"/>

            <TextView
                android:id="@+id/getEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Admin"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/getUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uid Admin"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/proposalMahasiswa"
                    android:src="@drawable/paper"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/et_bgadmin"
                    android:contentDescription="Proposal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proposal"/>

                <ImageButton
                    android:src="@drawable/money"
                    android:layout_width="140dp"
                    android:scaleType="centerCrop"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/et_bgadmin"
                    android:contentDescription="Donasi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donasi"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnManajemenUser"
                    android:src="@drawable/manager"
                    android:layout_width="140dp"
                    android:scaleType="centerCrop"
                    android:layout_height="140dp"
                    android:background="@drawable/et_bgadmin"
                    android:contentDescription="Manajemen User" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manajemen Users"/>

                <ImageButton
                    android:src="@drawable/search1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/et_bgadmin"
                    android:contentDescription="Laporan Donasi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan Donasi"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>