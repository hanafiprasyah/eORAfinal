<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layoutKelolaProposal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/proposalID_kelolaProposal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Memuat.." />
            <TextView
                android:id="@+id/NIM_kelolaProposal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/proposalID_kelolaProposal"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/NIM_kelolaProposal">
                <TextView
                    android:id="@+id/status_kelolaProposal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text="Memuat.."/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>