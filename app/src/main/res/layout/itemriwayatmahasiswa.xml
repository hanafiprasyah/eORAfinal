<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layoutRiwayatDonasiKhusus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/NIMmahasiswa_riwayatDonasiMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:textColor="#111"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Memuat.." />
            <TextView
                android:id="@+id/pembatas1"
                android:layout_below="@+id/NIMmahasiswa_riwayatDonasiMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orang tua asuh :"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/namaDonatur_riwayatDonasiMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pembatas1"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/color3"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <TextView
                android:id="@+id/status_riwayatDonasiMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaDonatur_riwayatDonasiMahasiswa"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color3"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Memuat.."/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>