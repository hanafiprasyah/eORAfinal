<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_layoutKelolaDonatur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/RegIDdonatur_kelolaDonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Memuat.."
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/thumbnailKelolaDonatur"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/namaDonatur_kelolaDonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnailKelolaDonatur"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Memuat.."/>
            <TextView
                android:id="@+id/emailDonatur_kelolaDonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="#111"
                android:textSize="10sp"
                android:layout_below="@id/namaDonatur_kelolaDonatur"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Memuat.."/>
            <Button
                android:id="@+id/lihatPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P A S S W O R D"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/emailDonatur_kelolaDonatur"
                android:background="@drawable/et_bgadmin"
                android:textColor="@color/black80"/>
            <Button
                android:id="@+id/hapusDataDonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="H A P U S"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lihatPassword"
                android:background="@drawable/et_bgtolakproposal"
                android:textColor="@color/ghostwhite"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>